find_library(GFORTRAN NAMES libgfortran gfortran libgfortran.a libgfortran.dll.a HINTS "/lib/")
if(GFORTRAN)
  set(GFORTRAN_FOUND TRUE)
  set(GFORTRAN ${GFORTRAN})
  message(STATUS "Found gfortran: " ${GFORTRAN})
else(GFORTRAN)
  set(GFORTRAN "-lgfortran")
  message(STATUS "Could NOT find gfortran. Assume the linking flag -lgfortran is correct. ")
endif(GFORTRAN)