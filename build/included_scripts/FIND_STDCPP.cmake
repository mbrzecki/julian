find_library(STDCPP NAMES libstdc++.a HINTS "/lib/gcc/")
if(STDCPP)
  set(STDCPP_FOUND TRUE)
  set(STDCPP ${STDCPP})
  message(STATUS "Found libstdc++: " ${STDCPP})
else(STDCPP)
  set(STDCPP "-lstdc++")
  message(STATUS "Could NOT find libstdc++. Assume the linking flag -lstdc++ is correct. ")
endif(STDCPP)